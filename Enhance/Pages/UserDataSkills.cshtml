@page
@model Enhance.Pages.UserDataSkillsModel
@{
    ViewData["Title"] = "User Skills page";
}

<head>
    <link rel="stylesheet" href="~/css/UserDataSkill.css?version=1" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@200;300;400;500&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<div class="badge_1"><p>Step 2 of 2</p></div>

<form method="post">
    <div class="select">
        <select asp-for="SkillName">
            <option value="">Select a skill</option>
            <optgroup label="Languages">
                <option value="javascript">JavaScript</option>
                <option value="java">Java</option>
                <option value="python">Python</option>
                <!-- Add more language options here -->
            </optgroup>
            <optgroup label="Frameworks">
                <option value="angular">Angular</option>
                <option value="react">React</option>
                <option value="vue">Vue.js</option>
                <!-- Add more framework options here -->
            </optgroup>
            <optgroup label="Designing">
                <option value="photoshop">Adobe Photoshop</option>
                <option value="illustrator">Adobe Illustrator</option>
                <option value="sketch">Sketch</option>
                <!-- Add more designing options here -->
            </optgroup>
            <!-- Add more skill categories and options as needed -->
        </select>
    </div>
    <button type="submit">Upload</button>
</form>

<button class="button">Back</button>
