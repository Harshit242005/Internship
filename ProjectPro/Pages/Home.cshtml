                                <p class="Name">@project.Name</p>
                                <p>Peoples included in this project</p>
                                <div class="Images">
                                    @if (Model.MemberImages != null && Model.MemberImages.Count > 0)
                                    {
                                        foreach (var imageBytes in Model.MemberImages)
                                        {
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(imageBytes)" alt="Member Image" />
                                        }
                                    }
                                    else
                                    {
                                        <p>No data for the image</p>
                                    }
                                </div>


                            </div>
                            <div class="card-body">
